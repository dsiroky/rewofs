include "messages.fbs";

namespace rewofs.messages;

//--------------------------------------------------------------------------

union Message
{
    Ping,
    Pong,

    CommandReadTree,
    ResultReadTree,
    CommandStat,
    ResultStat,
    CommandReaddir,
    ResultReaddir,
    CommandReadlink,
    ResultReadlink,
    CommandMkdir,
    CommandRmdir,
    CommandUnlink,
    CommandSymlink,
    CommandRename,
    CommandChmod,
    CommandTruncate,
    CommandOpen,
    CommandClose,
    CommandRead,
    ResultRead,
    CommandWrite,
    ResultWrite,

    ResultErrno,

    NotifyChanged
}

// Main transport frame.
table Frame
{
    id:uint64;
    message: Message;
}

root_type Frame;
