Import("env")
lib_env = env

#==========================================================================

def setup_env(env):
    env = env.Clone()
    # disable warnings
    env.AppendUnique(CCFLAGS=["-w"])
    return env

#--------------------------------------------------------------------------

def lib_gen(env, libname, src, includedir):
    env.AppendUnique(CPPPATH=Dir(includedir))
    env = setup_env(env)
    if len(src) > 0:
        lib = env.StaticLibrary(libname, source=src)
        Export({libname: lib})
    return env

#==========================================================================
